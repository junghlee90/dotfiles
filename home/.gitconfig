[user]
  name = Tim Martin
  email = tim@timmart.in

[color]
  ui = auto

[push]
  default = upstream
  followTags = true

[branch]
  autosetuprebase = always

[merge]
  conflictstyle = diff3
  tool = vimdiff

[core]
  excludesfile = ~/.gitignore
  editor = vim

[grep]
  #always show line numbers
  lineNumber = true
  #use robust regex patterns
  extendedRegexp = true

[github]
  user = t-mart

[alias]
  logg = "log --graph --abbrev-commit --decorate --format=format:'%C(bold green)%h%C(reset) - %C(cyan)(%cr)%C(reset)%C(auto)%d%C(reset) %C(white)%s%C(reset) %C(dim white)- %an'"
  fix = "!f() { ${EDITOR} `git diff --name-only | uniq`; }; f"

[rerere]
  enabled = true

[grep]
  lineNumber = true
  patternType = extended

[rebase]
  autosquash = true

